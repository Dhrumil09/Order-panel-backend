{
  "name": "order-panel-backend",
  "version": "1.0.0",
  "description": "Order Panel Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "echo 'Build completed successfully'",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:db": "node scripts/test-db.js",
    "test:neon": "node scripts/test-neon-db.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "ts-node ./node_modules/knex/bin/cli.js migrate:latest",
    "migrate:rollback": "ts-node ./node_modules/knex/bin/cli.js migrate:rollback",
    "migrate:make": "ts-node ./node_modules/knex/bin/cli.js migrate:make",
    "seed": "ts-node ./node_modules/knex/bin/cli.js seed:run",
    "seed:make": "knex seed:make",
    "deploy:render": "./scripts/deploy-render.sh"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
